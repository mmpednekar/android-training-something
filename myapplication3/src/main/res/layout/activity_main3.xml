<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.example.ubuntu.myapplication3.MainActivity3">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="15"
        android:background="@color/colorOrange" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="15"
        android:background="@color/colorOrange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="15"
        android:weightSum="100">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/colorOrange"
            android:layout_margin="1dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/colorOrange"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="100"
            android:background="@color/colorGrey">

            <CheckBox
                android:id="@+id/ch_box1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Icecream"
                android:checked="false"/>

            <CheckBox
                android:id="@+id/ch_box2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Sandwich"
                android:checked="false"/>

            <CheckBox
                android:id="@+id/ch_box3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Lolipop"
                android:checked="false"/>

            <CheckBox
                android:id="@+id/ch_box4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Marshmallow"
                android:checked="false"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rdo_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="100"
            android:background="@color/colorGrey">
            <RadioButton
                android:id="@+id/rd_button_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Windows"
                android:checked="false"/>
            <RadioButton
                android:id="@+id/rd_button_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Linux"
                android:checked="false"/>
            <RadioButton
                android:id="@+id/rd_button_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="IBM"
                android:checked="false"/>
            <RadioButton
                android:id="@+id/rd_button_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Ubantu"
                android:checked="false"/>

        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/click_button_1"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:layout_width="match_parent"
        android:text="Dont Click Me"/>
</LinearLayout>
